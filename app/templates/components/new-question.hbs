{{#if addNewQuestion}}
  <h1>What is your question?</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Question Title?</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="author">What is your Username?</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="body">Content of the question?</label>
          {{input value=body id="body"}}
        </div>

        <div class="form-group">
          <label for="image">Find a funny picture on the internet!</label>
          {{input value=image id="image"}}
        </div>

        <div class="form-group">
          <label for="notes">Leave all your cool notes here!</label>
          {{input value=notes id="notes"}}
        </div>

        <div class="form-group">
          <label for="questionVotes">Initial Vote</label>
          {{input type='number' value=questionVotes id="questionVotes"}}
        </div>

        <button {{action 'save3'}}>Save your question!</button>
      </form>
    </div>
{{else}}
    <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
