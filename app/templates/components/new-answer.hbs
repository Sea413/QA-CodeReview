{{#if addNewAnswer}}
  <h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="username">Username</label>
          {{input value=username id="username"}}
        </div>

        <div class="form-group">
          <label for="content">Type your answer</label>
          {{input value=content id="content"}}
        </div>

        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
